{
  "name": "@latch/core",
  "version": "0.3.0",
  "description": "Modern OIDC authentication for Next.js and secure clouds",
  "license": "Apache-2.0",
  "author": "Lance",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "jose": "^5.9.6"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "keywords": [
    "nextjs",
    "authentication",
    "oidc",
    "azure",
    "azure-government",
    "gcc-high",
    "dod",
    "oauth2",
    "pkce",
    "security"
  ]
}
